@page
@model MentoringApp.Pages.Mentees.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Mentee[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mentee[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mentee[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mentee[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mentee[0].Faculty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mentee[0].Program)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Mentee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Program)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
