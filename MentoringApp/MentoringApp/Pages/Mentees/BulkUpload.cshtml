@page
@model MentoringApp.Pages.Mentees.BulkUploadModel
@{
    ViewData["Title"] = "BulkUpload";
}

<h2>Add Mentees in Bulk</h2>
<hr />

<h3>Upload a spreadsheet that contains the data of several mentees to add them all at once.</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group" hidden="hidden">
                <label asp-for="FileUpload.Title" class="control-label"></label>
                <input asp-for="FileUpload.Title" type="text" class="form-control" />
                <span asp-validation-for="FileUpload.Title" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="FileUpload.UploadPublicSchedule" class="control-label"></label>
                <input asp-for="FileUpload.UploadPublicSchedule" type="file" class="form-control" style="height:auto" />
                <span asp-validation-for="FileUpload.UploadPublicSchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.UploadMenteeData" class="control-label"></label>
                <input asp-for="FileUpload.UploadMenteeData" type="file" class="form-control" style="height:auto" />
                <span asp-validation-for="FileUpload.UploadMenteeData" class="text-danger"></span>
            </div>
            <input type="submit" value="Upload" class="btn btn-default" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
