@page
@model MentoringApp.Pages.Account.Admin.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MyUser.Id" />
            <div class="form-group">
                <label asp-for="MyUser.Name" class="control-label"></label>
                <input asp-for="MyUser.Name" class="form-control" />
                <span asp-validation-for="MyUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyUser.UserName" class="control-label"></label>
                <input asp-for="MyUser.UserName" class="form-control" />
                <span asp-validation-for="MyUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyUser.Email" class="control-label"></label>
                <input asp-for="MyUser.Email" class="form-control" />
                <span asp-validation-for="MyUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyUser.Role.RoleName" class="control-label"></label>
                <select asp-for="RoleID" asp-items="Model.Roles" class="form-control">
                    <option value="@null">Please select</option>
                </select>
                <span asp-validation-for="MyUser.Role.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
